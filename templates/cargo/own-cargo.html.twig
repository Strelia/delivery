{% extends 'base.html.twig' %}

{% block title %}Cargo index{% endblock %}

{% block body %}
    <h1>Cargo index</h1>
    <a href="{{ path('cargo_new') }}">Create new</a>
    {% if cargos|length > 0 %}
    <table class="table">
        <thead>
        <tr>
            <th>{% trans %}Name{% endtrans %}</th>
            <th>{% trans %}Weight{% endtrans %}</th>
            <th>{% trans %}Volume{% endtrans %}</th>
            <th>{% trans %}Length{% endtrans %}</th>
            <th>{% trans %}Width{% endtrans %}</th>
            <th>{% trans %}Diameter{% endtrans %}</th>
            <th>{% trans %}CountBelt{% endtrans %}</th>
            <th>{% trans %}AddressFrom{% endtrans %}</th>
            <th>{% trans %}AddressTo{% endtrans %}</th>
            <th>{% trans %}HasHitch{% endtrans %}</th>
            <th>{% trans %}HasRuberTyres{% endtrans %}</th>
            <th>{% trans %}HasHook{% endtrans %}</th>
            <th>{% trans %}IsTir{% endtrans %}</th>
            <th>{% trans %}IsCMR{% endtrans %}</th>
            <th>{% trans %}IsT1{% endtrans %}</th>
            <th>{% trans %}DateStartMin{% endtrans %}</th>
            <th>{% trans %}DateStartMax{% endtrans %}</th>
            <th>{% trans %}Price{% endtrans %}</th>
            <th>{% trans %}PaymentKind{% endtrans %}</th>
            <th>{% trans %}IsVat{% endtrans %}</th>
            <th>{% trans %}PrepaymentKind{% endtrans %}</th>
            <th>{% trans %}Prepayment{% endtrans %}</th>
            <th>{% trans %}IsHiddenUserRequest{% endtrans %}</th>
            <th>{% trans %}Status{% endtrans %}</th>
            <th>{% trans %}CreatedAt{% endtrans %}</th>
            <th>{% trans %}UpdatedAt{% endtrans %}</th>
            <th class="actions"></th>
        </tr>
        </thead>
        <tbody>
        {% for cargo in cargos %}
            <tr>
                <td>{{ cargo.name }}</td>
                <td>{{ cargo.weight }}</td>
                <td>{{ cargo.volume }}</td>
                <td>{{ cargo.length }}</td>
                <td>{{ cargo.width }}</td>
                <td>{{ cargo.diameter }}</td>
                <td>{{ cargo.countBelt }}</td>
                <td>{{ cargo.addressFrom }}</td>
                <td>{{ cargo.addressTo }}</td>
                <td>{{ cargo.hasHitch ? 'Yes' : 'No' }}</td>
                <td>{{ cargo.hasRuberTyres ? 'Yes' : 'No' }}</td>
                <td>{{ cargo.hasHook ? 'Yes' : 'No' }}</td>
                <td>{{ cargo.isTir ? 'Yes' : 'No' }}</td>
                <td>{{ cargo.isCMR ? 'Yes' : 'No' }}</td>
                <td>{{ cargo.isT1 ? 'Yes' : 'No' }}</td>
                <td>{{ cargo.dateStartMin ? cargo.dateStartMin|date('Y-m-d') : '' }}</td>
                <td>{{ cargo.dateStartMax ? cargo.dateStartMax|date('Y-m-d') : '' }}</td>
                <td>{{ cargo.price }}</td>
                <td>{{ cargo.paymentKind|trans }}</td>
                <td>{{ cargo.isVat ? 'Yes' : 'No' }}</td>
                <td>{{ cargo.prepaymentKind|trans }}</td>
                <td>{{ cargo.prepayment }}</td>
                <td>{{ cargo.isHiddenUserRequest ? 'Yes' : 'No' }}</td>
                <td>{{ cargo.status|trans }}</td>
                <td>{{ cargo.createdAt ? cargo.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ cargo.updatedAt ? cargo.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('cargo_show', {'id': cargo.id}) }}">show</a>
                    <a href="{{ path('cargo_edit', {'id': cargo.id}) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endif %}
    <div>{{ 'nb_of_cargo'|trans({count: cargos|length}) }}</div>
    {% if previous >= 0 %}
        <a href="{{ path('cargo_index', {offset: previous }) }}">Previous</a>
    {% endif %}
    {% if next < cargos|length %}
        <a href="{{ path('cargo_index', { offset: next }) }}">Next</a>
    {% endif %}
{% endblock %}
