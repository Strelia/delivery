<form method="post" action="{{ path('request_cargo_delete', {'id': request_cargo.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ request_cargo.id) }}">
    <button class="btn">Delete</button>
</form>
