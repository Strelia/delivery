{% extends 'base.html.twig' %}

{% block title %}Business index{% endblock %}

{% block body %}
    <h1>Business index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>InternationalName</th>
                <th>Brand</th>
                <th>Address</th>
                <th>WebURL</th>
                <th>Logo</th>
                <th>Status</th>
                <th>Occupations</th>
                <th>AgencyType</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for business in businesses %}
            <tr>
                <td>{{ business.id }}</td>
                <td>{{ business.name }}</td>
                <td>{{ business.internationalName }}</td>
                <td>{{ business.brand }}</td>
                <td>{{ business.address }}</td>
                <td>{{ business.webURL }}</td>
                <td>{{ business.logo }}</td>
                <td>{{ business.status }}</td>
                <td>
                    {% for occupation in business.occupations %}
                        {{ occupation }}
                    {% endfor %}
                </td>
                <td>{{ business.agencyType }}</td>
                <td>
                    <a href="{{ path('business_show', {'id': business.id}) }}">show</a>
                    <a href="{{ path('business_edit', {'id': business.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
