{% extends 'base.html.twig' %}

{% block title %}Business{% endblock %}

{% block body %}
<div class="jumbotron">
    <h1 class="display-5">Business</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
                <td>{{ business.name }}</td>
            </tr>
            <tr>
                <th>{% trans %}Email{% endtrans %}</th>
                <td><a href="mailto: {{ business.email }}">{{ business.email }}</a></td>
            </tr>
            <tr>
                <th>{% trans %}International Name{% endtrans %}</th>
                <td>{{ business.internationalName }}</td>
            </tr>
            <tr>
                <th>{% trans %}Brand{% endtrans %}</th>
                <td>{{ business.brand }}</td>
            </tr>
            <tr>
                <th>{% trans %}Address{% endtrans %}</th>
                <td>{{ business.address }}</td>
            </tr>
            <tr>
                <th>{% trans %}URL{% endtrans %}</th>
                <td><a href="{{ business.webURL }}">{{ business.webURL }}</a></td>
            </tr>
            <tr>
                <th>{% trans %}Logo{% endtrans %}</th>
                <td>
                    {% if business.logo %}
                        <img alt="{{ business.name }}" class="img-fluid img-thumbnail" src="{{ asset('images/' ~ business.logo) }}">
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>{% trans %}Status{% endtrans %}</th>
                <td>{{ business.status|trans|raw }}</td>
            </tr>
            <tr>
                <th>{% trans %}Occupations{% endtrans %}</th>
                <td>
                    {% for occupation in business.occupations %}
                        {{ occupation|trans|raw }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>{% trans %}Agency Type{% endtrans %}</th>
                <td>{{ business.agencyType|trans|raw }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('business_index') }}">back to list</a>

    {% if app.user.company.id == business.id %}
        <a href="{{ path('business_edit', {'id': business.id}) }}">edit</a>
    {% endif %}

    {{ include('business/_delete_form.html.twig') }}
</div>
    {% if app.user.company.id == business.id %}
    <div class="jumbotron">
        <h2 class="display-5">{% trans %}Staff{% endtrans %}</h2>
        <a class="btn btn-primary" href="{{ path('user_new', {'businessId': business.id}) }}">{% trans %}Add New Employee{% endtrans %}</a>
        <table class="table">
            <thead>
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Surname{% endtrans %}</th>
                <th>{% trans %}Phone{% endtrans %}</th>
                <th>{% trans %}Email{% endtrans %}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for user in business.staff %}
                <tr>
                    <td>{{ user.name }}</td>
                    <td>{{ user.surname }}</td>
                    <td><a href="tel:{{ user.phone }}">{{ user.phone }}</a></td>
                    <td><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="{{ path('user_show', {'id': user.id}) }}" title="{% trans %}Show{% endtrans %}">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% endif %}
{% endblock %}
